<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
        >
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Hello!!!=)))"
            android:layout_alignParentLeft="true" android:layout_marginLeft="0dp" android:layout_alignParentTop="true"
            android:layout_marginTop="0dp" android:id="@+id/textView"/>
    <Button
            android:layout_width="169dp"
            android:layout_height="wrap_content"
            android:text="New Button"
            android:id="@+id/button1"
            android:layout_gravity="right|center_vertical"
            android:layout_alignLeft="@+id/textView" android:layout_alignParentTop="true"
            android:layout_marginTop="38dp"/>
    <Button
            android:layout_width="99dp"
            android:layout_height="wrap_content"
            android:text="New Button"
            android:id="@+id/button"
            android:layout_toRightOf="@+id/button1" android:layout_alignParentBottom="true"/>
    <Button
            android:layout_width="94dp"
            android:layout_height="72dp"
            android:text="Play"
            android:id="@+id/button2"
            android:layout_centerHorizontal="true" android:layout_alignParentTop="true"
            android:layout_marginTop="123dp"/>
    <SeekBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/seekBar"
            android:layout_alignParentLeft="true" android:layout_marginLeft="10dp" android:layout_alignParentTop="true"
            android:layout_marginTop="250dp"
            android:layout_alignRight="@+id/textView" android:layout_marginRight="10dp"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/play_str"
            android:layout_alignRight="@+id/seekBar" android:layout_alignParentTop="true"
            android:layout_marginTop="54dp" android:id="@+id/buttonPlayStop" android:onClick="playAndStop"/>
</RelativeLayout>

